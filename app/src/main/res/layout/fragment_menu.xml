<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:id="@+id/about"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lengthConverter"
            android:id="@+id/lengthConverter"
            android:layout_below="@id/about"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weightConverter"
            android:textColor="@color/white"
            android:id="@+id/weightConverter"
            android:layout_below="@id/lengthConverter"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/temperatureConverter"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:id="@+id/temperatureConverter"
        android:layout_below="@id/weightConverter"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>
    <TextView
        android:textColor="@color/white"
        android:text="@string/temperatureConverter"
        android:textSize="17dp"
        android:layout_below="@id/weightConverter"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"/>


</RelativeLayout>